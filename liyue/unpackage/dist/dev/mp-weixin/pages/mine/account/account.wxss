
.userInfo-list{
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
		-webkit-box-orient: vertical;
		-webkit-box-direction: normal;
		-webkit-flex-direction: column;
		        flex-direction: column;
		margin: 20rpx 0;
}
.item {
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
		height: 90rpx;
		background-color: #6BDBD6;
		-webkit-box-orient: horizontal;
		-webkit-box-direction: normal;
		-webkit-flex-direction: row;
		        flex-direction: row;
		margin: 10rpx 10rpx;
		padding: 15rpx 30rpx;
		border-radius: 15rpx;
}
.text{
		width: 20%;
		font-size: 16px;
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
		-webkit-box-align: center;
		-webkit-align-items: center;
		        align-items: center;
		text-align: center;
}
.info{
		width: 80%;
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
		-webkit-box-orient: horizontal;
		-webkit-box-direction: normal;
		-webkit-flex-direction: row;
		        flex-direction: row;
		-webkit-box-pack: end;
		-webkit-justify-content: flex-end;
		        justify-content: flex-end;
		-webkit-box-align: center;
		-webkit-align-items: center;
		        align-items: center;
}
.head{
		position: fixed;
		height: 121rpx;
		left: 15rpx;
		width: 96%;
		border-radius: 15rpx;
		/* background-color: #000000; */
}
.head-hover{
		background: rgba(0, 0, 0,0.25);
}
.userImg {
		width: 90rpx;
		height: 90rpx;
		border-radius: 150rpx;
		margin-right: 10rpx;
		background-color: #EAEAEA;
		z-index: 999;
}
.navigat-arrow {
		position: fixed;
		right: 0;
		line-height: 90rpx;
		font-size: 60rpx;
		color: #1F847A;
		text-align: right;
		font-family: texticons;
		/* background-color: #000000; */
}
.btncontainer{
		position: fixed;
		bottom: 70rpx;
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
		left: 5%;
		border-radius: 15rpx;
		width: 90%;
		height: 90rpx;
}
.btnbanner{
		/* height: 90upx; */
		background-color: #4CD964;
		opacity: 0.1;
		z-index: 1;
}
.btn-hover{
		background-color: #4CD964;
		opacity: 0.4;
}
.btnItem{
		box-shadow: 0 0 20rpx 0 #6BDBD6;
}
.btn{
		color: #08211F;
		line-height: 90rpx;
		background: none;
		width: 100%;
}

