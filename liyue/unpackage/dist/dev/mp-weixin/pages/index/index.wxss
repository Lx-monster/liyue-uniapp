}
.swiper{
	height: 300rpx;
	background-color: #FFE6C2;
}
.swiper-item{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
}
.swiper-image{
	width: 100%;
	height: 300rpx;
}
.sImg-info-bg{
	position: fixed;
	bottom: 0;
	background-color: #2bb6a8;
	opacity: 0.8;
	width: 100%;
	height: 60rpx;
	z-index: -1;
}
.sImg-info{
	position: fixed;
	bottom: 0;
}
.sImg-info text{
	color: #ffffff;
	padding: 0 20rpx;
	line-height: 60rpx;
	font-size: 35rpx;
}
.title{
	background-color: #EBF5F4;
	text-align: center;
}
.title-info{
	font-size: 17px;
	font-weight: bold;
}
.special-list{
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	padding: 10rpx 0;
	margin: 10rpx 10rpx;
	background-color: #FFF7EB;
}
.single-book{
	margin-left: 40rpx;
	display: inline-block;
}
.hotbook-image{
	width: 180rpx;
	height: 260rpx;
}
.hotbook-name{
	width: 200rpx;
	font-size: 14px;
	font-weight: bold;
	overflow: hidden;
	text-overflow: ellipsis;
	text-align: center;
}
.booksList{
	margin: 0 10rpx;
	padding-bottom: 100rpx;
