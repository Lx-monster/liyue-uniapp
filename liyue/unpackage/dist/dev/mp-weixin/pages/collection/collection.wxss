.mainContainer{
	background-color: #FFF7EB;
}
.c-list{
	margin-left: 0.5%;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-flow: row wrap;
	        flex-flow: row wrap;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: start;
	-webkit-justify-content: flex-start;
	        justify-content: flex-start;
}
.single-book{
	box-sizing: border-box;
	-webkit-box-flex:0;
	-webkit-flex:0 0 33%;
	        flex:0 0 33%;
	padding: 20rpx 20rpx;
	/* margin: 0 1upx; */
	border-bottom: #000000 solid 1rpx;
}
.single-book:hover{
	background-color: #bdbdbd;
	opacity: 0.5;
}
.c-image{
	width: 100%;
	height: 260rpx;
}
.c-name{
	font-size: 14px;
	font-weight: bold;
	overflow: hidden;
	text-overflow: ellipsis;
	text-align: center;
}

